<div class="container">

  <div class="row">
    <div class="col">
      <h1 class="display-1">Developers</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form_tag(developers_path, {method: :get, class: "form-group"}) do %>

        <div class="form-group">
          <%= label_tag 'Programming Language', nil, class: 'small_label' %>
          <%= text_field_tag :pl_term, params[:pl_term], class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag 'Communication Language', nil, class: 'small_label' %>
          <%= text_field_tag :cl_term, params[:cl_term], class: "form-control" %>
        </div>

        <%= submit_tag 'Search', class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col">
      <h1 class="display-6"><%= @search_header%></h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Programming Languages</th>
            <th scope="col">Languages</th>
          </tr>
        </thead>
        <tbody>
          <% @developers.each do |developer| %>
            <tr>
              <td><%= developer.id %></td>
              <td><%= developer.email %></td>
              <td><%= developer.programming_languages.map(&:name).join(", ") %></td>
              <td><%= developer.languages.map(&:code).join(", ")  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
</div>
